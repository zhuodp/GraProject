<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/app_10dp">

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_fragment_setting_item"
        android:layout_width="@dimen/app_35dp"
        android:layout_height="@dimen/app_35dp"/>

    <TextView
        android:id="@+id/tv_fragment_setting_item"
        android:paddingLeft="@dimen/app_8dp"
        android:paddingRight="@dimen/app_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_font_size_20"
        android:layout_gravity="center_vertical"/>
</LinearLayout>