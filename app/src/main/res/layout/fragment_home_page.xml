<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.youth.banner.Banner
        android:id="@+id/home_page_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/home_page_tab_layout"
        android:layout_below="@id/home_page_banner"
        android:layout_marginTop="@dimen/app_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/color_36404A"
    />

    <android.support.v4.view.ViewPager
        android:id="@+id/home_page_tab_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_page_tab_layout"/>



</RelativeLayout>