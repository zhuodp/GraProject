<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/B2_20_trans">

    <com.zhuodp.graduationproject.utils.view.CircleImageView
        android:id="@+id/iv_drawer_user_pic"
        android:layout_width="@dimen/app_80dp"
        android:layout_height="@dimen/app_80dp"
        android:src="@drawable/user_pic_test"
        android:onClick="onUserPicClick"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/app_30dp"/>

    <TextView
        android:id="@+id/tv_drawer_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/app_5dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/app_30dp"
        android:layout_below="@id/iv_drawer_user_pic"
        android:text="点击头像登陆"
        android:textSize="@dimen/app_font_size_16"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/tv_drawer_user_signature"
        android:layout_below="@id/tv_drawer_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_30dp"
        android:textSize="@dimen/app_font_size_13"
        android:gravity="center_vertical"
        android:text="个性签名未设置"/>

    <Button
        android:id="@+id/btn_drawer_edit"
        android:layout_width="@dimen/app_22dp"
        android:layout_height="@dimen/app_22dp"
        android:background="@drawable/icon_edit_blue"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_drawer_user_signature"
        android:layout_marginRight="@dimen/app_20dp"
        android:layout_marginBottom="@dimen/app_5dp"
        android:onClick="onEditUserSignature"/>

</RelativeLayout>
