<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- rectangle表示为矩形 -->
    <!-- 填充的颜色 -->
    <solid android:color="@color/blue_E0F0FF" />

    <!-- 边框的颜色和粗细 -->
    <stroke
        android:width="0dp"
        android:color="@color/blue_3f78a8"
        />

    <!-- android:radius 圆角的半径 -->
    <corners
        android:radius="@dimen/app_5dp"
        />

</shape>